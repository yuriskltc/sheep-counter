pipeline  {
    agent any
    environment {
        uploadSpec = ''
        server = ''
    }
    tools {
        maven "Maven"
    }
    stages{
        stage ('Artifactory configuration') {         
            steps{
                script{
                    server = Artifactory.server 'JFROGTST'
                }
            }
        }
        stage('Fetch') {
            steps {
                git credentialsId: 'GITHUB', url: 'https://github.com/yuriskltc/sheep-counter.git'
            }
        }
        stage('Compile') {        
            steps{          
                    sh 'mvn -Dv=${BUILD_NUMBER} compile'        
                }
        }
        stage('Test') {        
            steps{          
                    sh 'mvn -Dv=${BUILD_NUMBER} test'        
                }
        }
        stage('Build') {
            steps{
                 sh 'mvn -B -DskipTests -Dv=${BUILD_NUMBER} clean package -U'
            }
        }
        stage ('Deploy') {   
            environment{
                uploadSpec = '''{
                    "files": [
                        {
                            "pattern": "target/*.jar",
                            "target": "my-libs-release-local"                  
                        }, {
                            "pattern": "target/*.pom",
                            "target": "my-libs-release-local"
                        }]
                }'''    
            }         
            steps{                               
                script{
                    sh 'cp pom.xml target/sheep-counter-1.0.${BUILD_NUMBER}-SNAPSHOT.pom'
                    def buildInfo = Artifactory.newBuildInfo()
                    buildInfo.env.collect()
                    server.upload spec: uploadSpec, buildInfo: buildInfo
                    server.publishBuildInfo buildInfo
                }
            }
        }
        stage ('PostBuild - Simple deploy with long run') {
            steps{
                build job: 'Sheep Counter CD', parameters: [string(name: 'BUILDNUM', value: "${BUILD_NUMBER}" )],wait:false
            }
        }        
    }
}
